<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:elevation="10dp"
    android:layout_marginVertical="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="NAMA POSKO "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text=" : "/>
            <TextView
                android:id="@+id/tvNamaPosko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Posko Induk BPBD"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="JUMLAH PENGUNGSI "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text=" : "/>
            <TextView
                android:id="@+id/tvKontakHp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="0851234567890"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="KONTAK "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text=" : "/>
            <TextView
                android:id="@+id/tvJumlahPengungsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="150"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="LOKASI "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text=" : "/>
            <TextView
                android:id="@+id/tvLokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Jl. Pemuda Desa Kaligangsa Wetan, Kecamatan Brebes"/>

        </LinearLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/masuk"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cornerRadius="50dp"
                android:textSize="12sp"
                android:layout_marginRight="2dp"
                android:backgroundTint="@color/orange"
                android:text="Logistik Masuk"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/keluar"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginLeft="2dp"
                app:cornerRadius="50dp"
                android:textSize="12sp"
                android:backgroundTint="@color/orange"
                android:text="Logistik Keluar"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/kebutuhan"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginRight="2dp"
                app:cornerRadius="50dp"
                android:textSize="12sp"
                android:backgroundTint="@color/orange"
                android:text="Kebutuhan"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/lokasi"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginLeft="2dp"
                app:cornerRadius="50dp"
                android:textSize="12sp"
                android:backgroundTint="@color/orange"
                android:text="Cek Lokasi"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/edit"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginLeft="2dp"
                app:cornerRadius="50dp"
                android:textSize="12sp"
                android:backgroundTint="@color/orange"
                android:text="Edit"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/hapus"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginLeft="2dp"
                app:cornerRadius="50dp"
                android:textSize="12sp"
                android:backgroundTint="@color/orange"
                android:text="Hapus"
                />

        </GridLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>